{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo",
			"options": {
				"env": {
					"RUST_BACKTRACE": "full"
				}
			},
			"args": [
				"run",
				"--",
				"--config-file",
				"${workspaceFolder}/wise/dev.toml"
			],
			"label": "Run Debug",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"test"
			],
			"label": "Run Test",
			"group": {
				"kind": "test"
			}
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--release"
			],
			"label": "Run Release",
			"group": {
				"kind": "build"
			}
		},
		{
			"type": "shell",
			"command": "cargo",
			"args": [
				"build"
			],
			"label": "Build Debug",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}